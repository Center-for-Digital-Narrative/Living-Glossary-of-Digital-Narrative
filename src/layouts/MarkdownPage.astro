---
import NavSmall from "../components/NavSmall.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const {frontmatter} = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title +' | LGDN' }>
    <NavSmall />
    <div class="container mt-10 px-4 overflow-hidden">
            <h1 class="text-secondary text-4xl font-bold mb-10">{frontmatter.title}</h1>
            <article class="prose xl:prose-lg" style="max-width:inherit">
                <slot />
            </article>
    </div>
</BaseLayout>