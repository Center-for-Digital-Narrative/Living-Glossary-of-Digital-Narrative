---
import BaseLayout from "../layouts/BaseLayout.astro";
const {frontmatter} = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title + ' | LGDN'}>
    <div class="container mt-10 px-4 overflow-hidden">
        <h1 class="text-6xl text-black dark:text-white font-bold mb-10">{frontmatter.title}</h1>
        <article class="prose dark:prose-invert xl:prose-lg" style="max-width:inherit">
            <slot/>
        </article>
    </div>
</BaseLayout>