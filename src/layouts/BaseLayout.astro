---
import '../utils.css';
import { ViewTransitions } from 'astro:transitions';
import NavMain from "../components/NavMain.astro";
import Footer from "../components/Footer.astro";
import NavMobile from "../components/NavMobile.astro";
import NavSmall from "../components/NavSmall.astro";

interface Props {
    pageTitle: string;
    letter?: string;
}
const { pageTitle, letter } = Astro.props;
---
<html lang="en" style="overflow-y: scroll">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <ViewTransitions />
</head>
<body class="flex flex-col min-h-screen dark:bg-black">

    <NavMain />

    <NavSmall letter={letter} />
    <NavMobile />

    <div class="flex-grow">
        <slot />
    </div>

    <Footer />

</body>
</html>