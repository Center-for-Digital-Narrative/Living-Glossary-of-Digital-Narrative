---
import { getCollection } from "astro:content";

import BaseLayout from '../../layouts/BaseLayout.astro';
import NavSmall from "../../components/NavSmall.astro";
import TermSnippet from "../../components/TermSnippet.astro";
import NavMobile from "../../components/NavMobile.astro";
const allPosts = await getCollection("terms");
---

<BaseLayout pageTitle='Term List | LGDN'>
    <NavSmall />
    <NavMobile />
    <div class="container mt-10 px-4 overflow-hidden">
        <h1 class="text-secondary text-4xl font-bold mb-10">Term List</h1>
        {allPosts.map( (post:any) => <TermSnippet term={post} />)}
    </div>
</BaseLayout>